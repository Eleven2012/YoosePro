<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/date_pick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/wheel_back_bg"
        android:visibility="gone"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/date_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/pb_list_date_pick_title_height"
            android:background="@drawable/wheel_back_bg"
            >
            <Button 
	            android:id="@+id/date_cancel"
	            android:layout_width="@dimen/pb_list_date_pick_btn_width"
	            android:layout_height="match_parent"
	            android:layout_margin="@dimen/tab_btn_margin"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:text="@string/cancel"
	            android:textColor="@color/text_color_white"
	            android:background="@drawable/tab_button"
	            />
            <Button 
	            android:id="@+id/search_btn"
	            android:layout_width="@dimen/pb_list_date_pick_btn_width"
	            android:layout_height="match_parent"
	            android:layout_margin="@dimen/tab_btn_margin"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:text="@string/search"
	            android:textColor="@color/text_color_white"
	            android:background="@drawable/tab_button"
	            />
        </RelativeLayout>
        
        
        <RelativeLayout 
            android:id="@+id/layout_cNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_marginLeft="@dimen/item_left_right_margin"
            android:layout_marginRight="@dimen/item_left_right_margin"
            android:layout_marginTop="@dimen/item_group_margin_top"
            >
            <EditText 
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/inner_margin_left"
                android:layout_marginRight="@dimen/inner_margin_right"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:text=""
                android:singleLine="true"
                android:inputType="number"
                android:background="#00000000"
                android:hint="@string/start_time"
                />
            
    	</RelativeLayout>
    	
        <RelativeLayout 
            android:id="@+id/layout_cNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_marginLeft="@dimen/item_left_right_margin"
            android:layout_marginRight="@dimen/item_left_right_margin"
            android:layout_marginTop="@dimen/item_group_margin_top"
            >
            <EditText 
                android:id="@+id/end_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/inner_margin_left"
                android:layout_marginRight="@dimen/inner_margin_right"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:text=""
                android:singleLine="true"
                android:inputType="number"
                android:background="#00000000"
                android:hint="@string/end_time"
                />
            
    	</RelativeLayout>
        <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="@dimen/inner_margin_left"
	        android:layout_marginRight="@dimen/inner_margin_right"
	        android:layout_marginTop="@dimen/item_group_margin_top"
	        android:background="@drawable/tiao_bg_single"
	        android:orientation="vertical"
	        >
	        
		    <LinearLayout 
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" 
		        >
		        <TextView 
			        android:id="@+id/text"
			        android:layout_width="@dimen/pb_list_datepick_year_width"
			        android:layout_height="@dimen/pb_list_datepick_item_height"
			        android:gravity="center"
			        android:text="@string/year"
			        android:textStyle="bold"
			        android:textSize="@dimen/text_size_normal"
			        android:textColor="@color/text_color_black"
			        />
		        <TextView 
			        android:id="@+id/text"
			        android:layout_width="0dp"
					android:layout_weight="1"
			        android:layout_height="@dimen/pb_list_datepick_item_height"
			        android:gravity="center"
			        android:text="@string/month"
			        android:textStyle="bold"
			        android:textSize="@dimen/text_size_normal"
			        android:textColor="@color/text_color_black"
			        />
		        <TextView 
			        android:id="@+id/text"
			        android:layout_width="0dp"
					android:layout_weight="1"
			        android:layout_height="@dimen/pb_list_datepick_item_height"
			        android:gravity="center"
			        android:text="@string/day"
			        android:textStyle="bold"
			        android:textSize="@dimen/text_size_normal"
			        android:textColor="@color/text_color_black"
			        />
		        <TextView 
			        android:id="@+id/text"
			        android:layout_width="0dp"
					android:layout_weight="1"
			        android:layout_height="@dimen/pb_list_datepick_item_height"
			        android:gravity="center"
			        android:text="@string/hour"
			        android:textStyle="bold"
			        android:textSize="@dimen/text_size_normal"
			        android:textColor="@color/text_color_black"
			        />
		        <TextView 
			        android:id="@+id/text"
			        android:layout_width="0dp"
					android:layout_weight="1"
			        android:layout_height="@dimen/pb_list_datepick_item_height"
			        android:gravity="center"
			        android:text="@string/minutes"
			        android:textStyle="bold"
			        android:textSize="@dimen/text_size_normal"
			        android:textColor="@color/text_color_black"
			        />
		    </LinearLayout>
		    <LinearLayout 
		       	android:layout_width="match_parent"
		    	android:layout_height="wrap_content" 
		    	android:orientation="horizontal"
		        >
		        <com.jwkj.wheel.widget.WheelView 
			        android:id="@+id/date_year"
					android:layout_height="wrap_content"
					android:layout_width="@dimen/pb_list_datepick_year_width"
					/>
		        <com.jwkj.wheel.widget.WheelView 
			        android:id="@+id/date_month"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
					android:layout_weight="1"
					/>
		        <com.jwkj.wheel.widget.WheelView 
			        android:id="@+id/date_day"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
					android:layout_weight="1"
					/>
		        <com.jwkj.wheel.widget.WheelView 
			        android:id="@+id/date_hour"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
					android:layout_weight="1"
					/>
		        <com.jwkj.wheel.widget.WheelView 
			        android:id="@+id/date_minute"
					android:layout_height="wrap_content"
					android:layout_width="0dp"
					android:layout_weight="1"
					/>
		    </LinearLayout>
        </LinearLayout>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="@dimen/item_group_margin_top"
            />
    </LinearLayout>