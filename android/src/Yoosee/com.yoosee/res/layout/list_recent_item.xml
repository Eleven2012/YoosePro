<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item"
    android:orientation="vertical"
    >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/recent_item_height"
	    android:orientation="horizontal"
	    >
	    
	
    <com.jwkj.widget.HeaderView
        android:id="@+id/header_img"
        android:layout_width="@dimen/recent_item_user_icon_width_height"
        android:layout_height="@dimen/recent_item_user_icon_width_height"
        android:scaleType="fitCenter"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:src="@drawable/header_icon" 
        />
    
    <RelativeLayout 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
        >
        <RelativeLayout
	    android:id="@+id/show_user_info"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dp"
	    android:layout_alignParentTop="true"
	    >
	 	<TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="sfsd"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_normal" />
	    <TextView 
	        android:id="@+id/count"
	        android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(7)"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/text_size_normal"
            android:layout_toRightOf="@+id/user_name"
	        />
	     
	     <ImageView 
	        android:layout_width="@dimen/recent_call_state_img_width"
			android:layout_height="@dimen/recent_call_state_img_height"
			android:src="@drawable/call_in_accept"
			android:id="@+id/calllogo"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:focusable="false"
	       	android:layout_marginRight="@dimen/inner_margin_right"
			/>
	     
	     
	</RelativeLayout>
	
	<RelativeLayout 
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5dp"
		android:layout_alignParentBottom="true"
		>

		<TextView 
		    android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:singleLine="true"
			android:text="2012-12-06 14:22" 
			android:layout_marginRight="@dimen/inner_margin_right"
			android:textColor="@color/text_color_blue"
			android:textSize="@dimen/text_size_normal" />

	</RelativeLayout>
    </RelativeLayout>
	</LinearLayout>
</LinearLayout>