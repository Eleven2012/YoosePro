<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#ffffff"
    >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/tab_bar"
        android:orientation="vertical" >
        <ImageView 
            android:id="@+id/back_btn"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/tab_btn_margin"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            android:src="@drawable/back"
            android:padding="@dimen/tab_btn_padding"
            android:scaleType="center"
            />
        <TextView
            android:id="@+id/chat_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/about_s"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </RelativeLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/about_pager"
        android:layout_marginTop="@dimen/about_pager_margin"
        android:layout_marginLeft="@dimen/about_pager_margin"
        android:layout_marginRight="@dimen/about_pager_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:layout_above="@+id/layout_bottom"
        android:layout_gravity="center"
        android:background="#000000"
        android:flipInterval="30"
        />
    <RelativeLayout 
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/about_bottom_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        >
        <ImageView 
            android:id="@+id/img_one"
            android:layout_width="@dimen/about_bottom_img_width_height"
            android:layout_height="@dimen/about_bottom_img_width_height"
            android:src="@drawable/about_bottom_p"
            android:scaleType="centerCrop"
            />
        <ImageView 
            android:id="@+id/img_two"
            android:layout_width="@dimen/about_bottom_img_width_height"
            android:layout_height="@dimen/about_bottom_img_width_height"
            android:layout_toRightOf="@+id/img_one"
            android:src="@drawable/about_bottom"
            android:scaleType="centerCrop"
            />
        <ImageView 
            android:id="@+id/img_three"
            android:layout_width="@dimen/about_bottom_img_width_height"
            android:layout_height="@dimen/about_bottom_img_width_height"
            android:layout_toRightOf="@+id/img_two"
            android:src="@drawable/about_bottom"
            android:scaleType="centerCrop"
            />
    </RelativeLayout>
</RelativeLayout>