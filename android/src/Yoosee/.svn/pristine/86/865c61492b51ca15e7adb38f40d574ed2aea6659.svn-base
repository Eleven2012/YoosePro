<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="380dp"
    android:layout_gravity="center"
    android:background="@drawable/remind"
    android:orientation="vertical"
    >
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:text="@string/conn_fail"
       android:textColor="@color/text_color_black"
       android:textSize="@dimen/text_size_normal"
       android:layout_gravity="center_horizontal"/>
   <ImageView 
       android:layout_width="239dp"
       android:layout_height="100dp"
       android:layout_marginTop="20dp"
       android:layout_gravity="center_horizontal"
       android:background="@drawable/connect_failed"/>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:text="@string/reason"
       android:textColor="@color/text_color_black"/>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/connect_failed_reason1"
       android:textColor="@color/text_color_black"/>
   <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/connect_failed_reason2"
       android:textColor="@color/text_color_black"/>
    <TextView 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/connect_failed_reason3"
       android:textColor="@color/text_color_black"/>
   <Button 
       android:id="@+id/try_again"
       android:layout_width="100dp"
       android:layout_height="32dp"
       android:layout_marginTop="15dp"
       android:background="@drawable/hear"
       android:textSize="@dimen/text_size_small"
       android:layout_gravity="center_horizontal"
       android:text="@string/try_again"
       android:textColor="@color/text_color_white"/>
   <Button 
       android:id="@+id/try_qrecode"
       android:layout_width="100dp"
       android:layout_height="32dp"
       android:layout_marginTop="5dp"
       android:background="@drawable/hear"
       android:textSize="@dimen/text_size_small"
       android:layout_gravity="center_horizontal"
       android:text="@string/use_qrecode"
       android:textColor="@color/text_color_white"/>

</LinearLayout>