<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/main_bg"
    >
    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/tab_bar"
        android:orientation="vertical" >
		<ImageView 
            android:id="@+id/back_btn"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="@dimen/tab_button_height"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/tab_btn_margin"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            android:src="@drawable/back"
            android:padding="@dimen/tab_btn_padding"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_online_device"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
        
        <Button 
            android:id="@+id/next"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="@dimen/tab_button_height"
            android:layout_margin="@dimen/tab_btn_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            android:textSize="@dimen/text_save_size"
            android:visibility="gone"
            />
            
    </RelativeLayout>
	 <LinearLayout
	     android:id="@+id/layout_manually_add"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="@dimen/item_left_right_margin"
         android:layout_marginRight="@dimen/item_left_right_margin"
         android:layout_marginTop="@dimen/item_group_margin_top"
         android:orientation="vertical" >
			<RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="@dimen/ctl_setting_bar_height"
		            android:background="@drawable/tiao_bg_up"
		            >

		     <EditText 
                  android:id="@+id/input_device_id"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/inner_margin_left"
                  android:layout_marginRight="@dimen/inner_margin_right"
                  android:textSize="@dimen/text_size_small_edit"
                  android:textColor="@color/text_color_black"
                  android:gravity="left|center_vertical"
                  android:text=""
                  android:inputType="number"
                  android:singleLine="true"
                  android:background="#00000000"
                  android:hint="@string/input_device_id"
             />  
			</RelativeLayout>
			<RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="@dimen/ctl_setting_bar_height"
		            android:background="@drawable/tiao_bg_center"
		            >
		          <EditText 
                  android:id="@+id/input_contact_name"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/inner_margin_left"
                  android:layout_marginRight="@dimen/inner_margin_right"
                  android:textSize="@dimen/text_size_small_edit"
                  android:textColor="@color/text_color_black"
                  android:gravity="left|center_vertical"
                  android:text=""
                  android:singleLine="true"
                  android:inputType="text"
                  android:background="#00000000"
                  android:hint="@string/input_contact_name"
             />  
			</RelativeLayout>
			 <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="@dimen/ctl_setting_bar_height"
		            android:background="@drawable/tiao_bg_bottom"
		            >
		          <EditText 
                  android:id="@+id/input_contact_pwd"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginLeft="@dimen/inner_margin_left"
                  android:layout_marginRight="@dimen/inner_margin_right"
                  android:textSize="@dimen/text_size_small_edit"
                  android:textColor="@color/text_color_black"
                  android:gravity="left|center_vertical"
                  android:text=""
                  android:singleLine="true"
                  android:inputType="textPassword|number"
                  android:background="#00000000"
                  android:hint="@string/input_contact_pwd"
             />  
			</RelativeLayout>
			<RelativeLayout 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:layout_gravity="center_horizontal"
		            >
		          <Button
		              android:id="@+id/bt_ensure"
		              style="@style/button_bottom_style"
		              android:text="@string/confirm"
		              />  
			</RelativeLayout>
     </LinearLayout>
</LinearLayout>
