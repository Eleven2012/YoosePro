<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:background="@drawable/selector_bottom_bar_button"
    >
    <RelativeLayout 
        android:layout_width="@dimen/quick_item_width"
        android:layout_height="@dimen/quick_item_height"
        
        >
        <ImageView 
            android:id="@+id/item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/item_name"
            android:src="@drawable/ic_action_delete_pressed"
            android:padding="@dimen/quick_item_icon_padding"
            android:scaleType="centerCrop"
            />
        <TextView 
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textColor="@color/text_color_black"
            android:textSize="@dimen/quick_item_text_size"
            android:layout_centerHorizontal="true"
            android:text="删除"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/quick_item_bottom_margin"
            />
    </RelativeLayout>
    
    <ImageView
       android:layout_width="1dp"
       android:layout_height="match_parent"
       android:background="@drawable/separator_bottom_button"
       />
</LinearLayout>

