<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    >
    	<RelativeLayout
	        android:id="@+id/layout_title"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/title_height"
	        android:background="@drawable/tab_bar"
	        android:orientation="vertical" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
            android:text="@string/wizard"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:textSize="@dimen/title_text_size"
            />
        <!-- 
        <Button 
            android:id="@+id/register"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/tab_btn_margin"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/next"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            />
           -->
    	</RelativeLayout>
    	
    	<RelativeLayout 
            android:id="@+id/layout_email"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_below="@+id/layout_title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            >
            <EditText 
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:text=""
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:background="#00000000"
                android:hint="@string/input_email"
                />
            
        </RelativeLayout>
        
    	<RelativeLayout 
            android:id="@+id/layout_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_below="@+id/layout_email"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            >
            <EditText 
                android:id="@+id/pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:text=""
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="#00000000"
                android:hint="@string/inputpassword"
                />
            
        </RelativeLayout>
        
    	<RelativeLayout 
            android:id="@+id/layout_confirm_pwd"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/corner_tiao_single_bg"
            android:layout_below="@+id/layout_pwd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            >
            <EditText 
                android:id="@+id/confirm_pwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_black"
                android:gravity="left|center_vertical"
                android:text=""
                android:singleLine="true"
                android:inputType="textPassword"
                android:background="#00000000"
                android:hint="@string/reinputpassword"
                />
            
        </RelativeLayout>

    	<Button
    	    android:id="@+id/register"
    	    android:layout_width="match_parent"
    	    android:layout_height="@dimen/globel_button_height"
            android:layout_marginLeft="@dimen/left_right_margin"
            android:layout_marginRight="@dimen/left_right_margin"
            android:layout_marginTop="@dimen/item_group_margin_top"
            android:background="@drawable/button_bg_dialog_ok"
    	    android:layout_below="@+id/layout_confirm_pwd"
    	    android:textColor="@color/dialog_title"
            android:textSize="@dimen/text_size_normal"
    	    android:text="@string/btn_register" />

</RelativeLayout>