<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/local_device_list_item_height"
        android:background="@drawable/selector_list_item">
    <ImageView 
			  android:id="@+id/img_type"
			  android:layout_width="@dimen/local_device_item_img_type_width_height"
			  android:layout_height="@dimen/local_device_item_img_type_width_height"
			  android:src="@drawable/ic_device_type_ipc"
			  android:layout_alignParentLeft="true"
			  android:layout_centerVertical="true"
			  android:layout_marginLeft="@dimen/inner_margin_left"
			  android:scaleType="centerCrop"
			  />
    	<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_centerInParent="true"
		    android:orientation="vertical"
		    >
	       			<TextView 
			                android:id="@+id/text_name"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:textColor="@color/text_color_black"
			                android:textSize="@dimen/text_size_large"
			                android:textStyle="bold"
			                android:layout_gravity="center"
			                android:text="张三"
			                />
	       			<TextView 
			                android:id="@+id/text_ip_address"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginTop="5dp"
			                android:textColor="@color/text_color_black"
			                android:textSize="@dimen/text_size_normal"
			                android:layout_gravity="center"
			                android:text="张三dsdfsfsdfs"
			                />
	       			
	    </LinearLayout>
	     <ImageView 
	                    android:layout_width="@dimen/local_device_item_img_add_width_height"
	                    android:layout_height="@dimen/local_device_item_img_add_width_height"
	                    android:layout_centerVertical="true"
	                    android:layout_marginRight="@dimen/inner_margin_right"
	                    android:layout_alignParentRight="true"
	                    android:background="@drawable/ic_add_item"/>
	     </RelativeLayout>
</RelativeLayout>