<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/main_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@drawable/tab_bar"
        android:orientation="vertical" >
		<ImageView 
            android:id="@+id/back_btn"
            android:layout_width="@dimen/tab_btn_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/tab_btn_margin"
            android:textColor="@color/text_color_white"
            android:background="@drawable/tab_button"
            android:src="@drawable/back"
            android:padding="@dimen/tab_btn_padding"
            android:scaleType="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/playback"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size"
            />
    </RelativeLayout>
    <RelativeLayout 
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pb_top_info_bar_height"
        android:background="@drawable/set_laguage"
        android:layout_below="@+id/layout_title"
        >
        	<com.jwkj.widget.HeaderView
	            android:id="@+id/header_img"
	            android:layout_width="@dimen/ctl_top_info_user_icon_width_height"
		        android:layout_height="@dimen/ctl_top_info_user_icon_width_height"
		        android:layout_alignParentLeft="true"
		        android:layout_centerVertical="true"
		        android:layout_margin="10dp"
		        android:scaleType="fitCenter"
	            android:src="@drawable/header_icon" 
	            />
        	
        	<LinearLayout 
        	    android:id="@+id/contact_pro"
        	    android:layout_width="match_parent"
        	    android:layout_height="match_parent"
        	    android:layout_toRightOf="@+id/header_img"
        	    android:orientation="vertical"
        	    >
        	    <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="1"
		            >
        	    <TextView 
        	            android:id="@+id/contactName"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:layout_alignParentBottom="true"
        	            android:textSize="@dimen/text_size_normal"
        	            android:textColor="@color/text_color_black"
        	            android:text="1111"
        	            />
        	    </RelativeLayout>
        	   
        	    <RelativeLayout 
		            android:layout_width="match_parent"
		            android:layout_height="0dp"
		            android:layout_weight="1"
		            >
        	    <TextView 
        	            android:id="@+id/contactNo"
        	            android:visibility="gone"
        	            android:layout_width="wrap_content"
        	            android:layout_height="wrap_content"
        	            android:layout_centerVertical="true"
        	            android:textSize="@dimen/text_size_normal"
        	            android:textColor="@color/text_color_black"
        	            android:text="2222"
        	            />
        	    </RelativeLayout>
        	</LinearLayout>
        	
    </RelativeLayout>
    <LinearLayout 
        android:id="@+id/search_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pb_list_search_bar_height"
        android:layout_below="@+id/header_bar"
        android:background="@drawable/set_laguage"
        android:gravity="center_vertical"
        >
        <TextView 
            android:id="@+id/search_one_day"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:text="@string/one_day"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_black"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            />
        <TextView 
            android:id="@+id/search_three_day"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_black"
            android:text="@string/three_day"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            />
        <TextView 
            android:id="@+id/search_one_month"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_black"
            android:text="@string/one_month"
            android:gravity="center"
            android:textStyle="bold"
            />
        <ImageView 
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="3dp"
            />
        <TextView 
            android:id="@+id/search_detail"
            android:layout_weight="1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_black"
            android:text="@string/customize"
            android:gravity="center"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/cursor_bar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/search_bar"
        android:paddingTop="1dp"
        android:paddingBottom="1dip"
        >
        <ImageView 
            android:id="@+id/cursor"
            android:layout_width="40dip"
            android:layout_height="2dip"
            android:scaleType="matrix"
            android:layout_marginLeft="20dp"
            
            android:src="#000000"
            />
        
    </LinearLayout>
    <RelativeLayout 
        android:id="@+id/record_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cursor_bar"
        >
        
    </RelativeLayout>
   <include layout="@layout/play_back_date_pick" />
</RelativeLayout>